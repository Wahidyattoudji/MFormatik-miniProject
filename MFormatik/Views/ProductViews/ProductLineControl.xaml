<UserControl
    x:Class="MFormatik.Views.ProductViews.ProductLineControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MFormatik.Views.ProductViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:productvms="clr-namespace:MFormatik.ViewModels.ProductVms"
    Width="Auto"
    Height="45"
    d:DataContext="{d:DesignInstance Type=productvms:ProductLineViewModel}"
    mc:Ignorable="d">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Column="0"
            VerticalAlignment="Center"
            FontSize="12"
            Text="{Binding Position}" />
        <ComboBox
            Grid.Column="1"
            Width="140"
            Height="30"
            VerticalAlignment="Center"
            DisplayMemberPath="Name"
            ItemsSource="{Binding Products}"
            SelectedItem="{Binding SelectedProduct}"
            Style="{StaticResource main.ComboBox.Style}"
            Tag="Article" />
        <TextBox
            Grid.Column="2"
            Width="90"
            Margin="0,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource TextBox.Normal}"
            Tag="Prix uni"
            Text="{Binding ProductUnitPrice, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            Grid.Column="3"
            Width="90"
            Margin="0,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource TextBox.Normal}"
            Tag="Quantité"
            Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            Grid.Column="4"
            Width="80"
            Margin="0,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource TextBox.Normal}"
            Tag="Remise %"
            Text="{Binding DiscountRate, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            Grid.Column="5"
            Width="100"
            Margin="0,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource TextBox.Normal}"
            Tag="Montant"
            Text="{Binding UnitPrice, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            Grid.Column="6"
            Width="100"
            Margin="0,0,5,0"
            VerticalAlignment="Center"
            Style="{StaticResource TextBox.Normal}"
            Tag="Montant net"
            Text="{Binding NetPrice, UpdateSourceTrigger=PropertyChanged}" />
        <Button
            Grid.Column="7"
            Width="30"
            Padding="0,0,8,0"
            Style="{StaticResource Icon.Red}"
            Tag="{StaticResource Delete}" />
    </Grid>
</UserControl>
