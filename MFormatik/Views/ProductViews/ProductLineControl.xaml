<UserControl
    x:Class="MFormatik.Views.ProductViews.ProductLineControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MFormatik.Views.ProductViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:productvms="clr-namespace:MFormatik.ViewModels.ProductVms"
    Width="Auto"
    Height="45"
    d:DataContext="{d:DesignInstance Type=productvms:ProductLineViewModel}"
    mc:Ignorable="d">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Column="0"
            Height="15"
            VerticalAlignment="Center"
            FontSize="12"
            Text="{Binding Position}" />
        <ComboBox
            Grid.Column="1"
            Height="30"
            Margin="5,0,5,0"
            VerticalAlignment="Center"
            DisplayMemberPath="Name"
            IsEnabled="{Binding IsEnable, Mode=TwoWay}"
            ItemsSource="{Binding Products}"
            SelectedItem="{Binding SelectedProduct}"
            Style="{StaticResource main.ComboBox.Style}"
            Tag="Article" />
        <TextBox
            Grid.Column="2"
            Height="30"
            Margin="0,0,5,0"
            VerticalAlignment="Center"
            IsEnabled="{Binding IsEnable, Mode=TwoWay}"
            Style="{StaticResource TextBox.Normal}"
            Tag="Prix uni"
            Text="{Binding ProductUnitPrice, StringFormat=F2, ValidatesOnExceptions=True, NotifyOnValidationError=True}" />
        <TextBox
            Grid.Column="3"
            Height="30"
            Margin="0,0,5,0"
            VerticalAlignment="Center"
            IsEnabled="{Binding IsEnable, Mode=TwoWay}"
            Style="{StaticResource TextBox.Normal}"
            Tag="Quantité"
            Text="{Binding Quantity, TargetNullValue=0, StringFormat=F2, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            Grid.Column="4"
            Height="30"
            Margin="0,0,5,0"
            VerticalAlignment="Center"
            IsEnabled="{Binding IsEnable, Mode=TwoWay}"
            Style="{StaticResource TextBox.Normal}"
            Tag="Remise %"
            Text="{Binding DiscountRate, StringFormat=F2, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            Grid.Column="5"
            Height="30"
            Margin="0,0,5,0"
            VerticalAlignment="Center"
            IsReadOnly="True"
            Style="{StaticResource TextBox.Normal}"
            Tag="Montant"
            Text="{Binding UnitPrice, StringFormat=F2, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            Grid.Column="6"
            Height="30"
            Margin="0,0,5,0"
            VerticalAlignment="Center"
            IsReadOnly="True"
            Style="{StaticResource TextBox.Normal}"
            Tag="Montant net"
            Text="{Binding NetPrice, StringFormat=F2, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <Button
            Grid.Column="7"
            Margin="0,0,5,0"
            Padding="0,0,8,0"
            Command="{Binding ValidateProductCommand}"
            Style="{StaticResource Icon.blue}"
            Tag="{StaticResource Check}"
            Visibility="{Binding IsValidateButtonVisible, Mode=TwoWay}" />
        <Button
            Grid.Column="8"
            Padding="0,0,8,0"
            Command="{Binding DeleteProductCommand}"
            Style="{StaticResource Icon.Red}"
            Tag="{StaticResource Delete}" />
    </Grid>
</UserControl>
