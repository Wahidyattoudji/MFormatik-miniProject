<Window
    x:Class="MFormatik.Views.OrderViews.AddOrderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MFormatik.Views.OrderViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ordervms="clr-namespace:MFormatik.ViewModels.OrderVms"
    xmlns:uc="clr-namespace:MFormatik.Views.ProductViews"
    Title="AddOrderView"
    Width="820"
    Height="650"
    d:DataContext="{d:DesignInstance Type=ordervms:AddOrderVM}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <!--  Title  -->
        <Border
            Grid.Row="0"
            Margin="8,0,8,10"
            Background="Transparent"
            BorderBrush="{StaticResource VisaBOT.DarkBlue}"
            BorderThickness="3"
            CornerRadius="8"
            SnapsToDevicePixels="True">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Height="38"
                    IsEnabled="False"
                    Style="{DynamicResource Icon.Only.UniformToFill}"
                    Tag="{DynamicResource Add.DataBase}" />
                <TextBlock
                    Padding="20,18"
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="{StaticResource VisaBOT.DarkBlue}"
                    Text="Nouvelle Commande" />
            </StackPanel>
        </Border>
        <!--  Select a Profile  -->
        <Border
            Grid.Row="1"
            Margin="10"
            Background="White"
            BorderBrush="{DynamicResource VisaBOT.DarkBlue}"
            BorderThickness="1"
            CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <!--  title : Select a livness  -->
                <TextBlock
                    Grid.Row="0"
                    Margin="10,4,4,0"
                    Padding="4"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{DynamicResource VisaBOT.DarkBlue}"
                    Text="Select un client" />
                <ComboBox
                    x:Name="ClientCB"
                    Grid.Row="1"
                    Height="35"
                    Margin="18,8,18,18"
                    DisplayMemberPath="FullName"
                    ItemsSource="{Binding ClientsList}"
                    SelectedItem="{Binding SelectedClient}"
                    SelectedValue="{Binding ClientId}"
                    SelectedValuePath="Id"
                    Style="{DynamicResource main.ComboBox.Style}" />
            </Grid>
        </Border>
        <!--  Sign Up Informations  -->
        <Grid Grid.Row="2" Margin="8,0,8,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--  Personal Section  -->
            <Border
                Grid.Column="1"
                Margin="0,0,6,0"
                Padding="10"
                Background="White"
                BorderBrush="{DynamicResource VisaBOT.DarkBlue}"
                BorderThickness="1"
                CornerRadius="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!--  Ajoute des Produit  -->
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,0,12"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{DynamicResource VisaBOT.DarkBlue}"
                        Text="Ajouter un articlet" />
                    <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="30"
                        Height="30"
                        Margin="0,0,15,0"
                        HorizontalAlignment="Right"
                        Command="{Binding AddProductCommand}"
                        Style="{StaticResource Icon.blue}"
                        Tag="{StaticResource Plus}" />
                    <!--  Product list  -->
                    <ListBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Height="250"
                        AllowDrop="True"
                        ItemsSource="{Binding ProductLines}"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <uc:ProductLineControl DataContext="{Binding}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
        <!--  SignUp buttol TextBox  -->
        <StackPanel
            Grid.Row="4"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="120"
                Height="35"
                Margin="10"
                Command="{Binding AddLivenessCommand}"
                Content="Valide"
                FlowDirection="RightToLeft"
                Style="{DynamicResource Icon.Green}"
                Tag="{StaticResource Edit.DataBase}" />
            <Button
                Width="90"
                Height="35"
                Margin="10"
                Background="{StaticResource Material.red}"
                Command="{Binding CancelCommand}"
                Content="Cancel"
                Style="{DynamicResource Icon.Green}" />
        </StackPanel>
    </Grid>
</Window>
