<Window
    x:Class="MFormatik.Views.OrderViews.AddOrderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:Behavior="clr-namespace:MFormatik.Helpers"
    xmlns:local="clr-namespace:MFormatik.Views.OrderViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ordervms="clr-namespace:MFormatik.ViewModels.OrderVms"
    xmlns:uc="clr-namespace:MFormatik.Views.ProductViews"
    Title="AddOrderView"
    Width="850"
    Height="750"
    d:DataContext="{d:DesignInstance Type=ordervms:AddOrderVM}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <!--  Title  -->
        <Border
            Grid.Row="0"
            Margin="8,0,8,10"
            Background="Transparent"
            BorderBrush="{StaticResource VisaBOT.DarkBlue}"
            BorderThickness="3"
            CornerRadius="8"
            SnapsToDevicePixels="True">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Height="38"
                    IsEnabled="False"
                    Style="{DynamicResource Icon.Only.UniformToFill}"
                    Tag="{DynamicResource Save.Plus}" />
                <TextBlock
                    Padding="20,18"
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="{StaticResource VisaBOT.DarkBlue}"
                    Text="Nouvelle Commande" />
            </StackPanel>
        </Border>
        <!--  Select a Client  -->
        <Border
            Grid.Row="1"
            Margin="10"
            Background="White"
            BorderBrush="{DynamicResource VisaBOT.DarkBlue}"
            BorderThickness="1"
            CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <!--  title : Select a client  -->
                <TextBlock
                    Grid.Row="0"
                    Margin="10,4,4,0"
                    Padding="4"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{DynamicResource VisaBOT.DarkBlue}"
                    Text="Select un client" />
                <ComboBox
                    x:Name="ClientCB"
                    Grid.Row="1"
                    Height="35"
                    Margin="18,8,18,18"
                    DisplayMemberPath="FullName"
                    ItemsSource="{Binding ClientsList}"
                    SelectedItem="{Binding SelectedClient}"
                    SelectedValue="{Binding ClientId}"
                    SelectedValuePath="Id"
                    Style="{DynamicResource main.ComboBox.Style}" />
            </Grid>
        </Border>
        <!--  add product  -->
        <Grid Grid.Row="2" Margin="8,0,8,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Column="1"
                Margin="0,0,6,0"
                Padding="10"
                Background="White"
                BorderBrush="{DynamicResource VisaBOT.DarkBlue}"
                BorderThickness="1"
                CornerRadius="10"
                Visibility="{Binding IsAddProductVisible, Mode=TwoWay}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!--  Ajoute des Produit  -->
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,0,12"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{DynamicResource VisaBOT.DarkBlue}"
                        Text="Ajouter un articlet" />
                    <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="30"
                        Height="30"
                        Margin="0,0,15,0"
                        HorizontalAlignment="Right"
                        Command="{Binding AddProductCommand}"
                        Style="{StaticResource Icon.blue}"
                        Tag="{StaticResource Plus}" />
                    <Border
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Height="20"
                        Padding="2"
                        Background="LightGray"
                        CornerRadius="5">
                        <StackPanel Margin="38,0,0,0" Orientation="Horizontal">
                            <TextBlock Margin="0,0,104,0" Text="Article" />
                            <TextBlock Margin="0,0,48,0" Text="Prix unitaire" />
                            <TextBlock Margin="0,0,60,0" Text="Quantité" />
                            <TextBlock Margin="0,0,55,0" Text="Remise %" />
                            <TextBlock Margin="0,0,60,0" Text="Montant" />
                            <TextBlock Margin="0,0,5,0" Text="Montant Net" />
                        </StackPanel>
                    </Border>

                    <!--  Product list  -->
                    <ListBox
                        Grid.Row="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Height="250"
                        AllowDrop="True"
                        ItemsSource="{Binding TempProductLines}"
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <i:Interaction.Behaviors>
                            <Behavior:DragDropBehavior DragData="{Binding DragData, Mode=TwoWay}" DropCommand="{Binding DropCommand}" />
                        </i:Interaction.Behaviors>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <uc:ProductLineControl DataContext="{Binding}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
        <!--  Detailes  -->
        <Grid Grid.Row="3" Margin="8,0,8,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="20,8,0,0"
                FontSize="18"
                FontWeight="Bold"
                Foreground="Black"
                Text="Remise totale (%)" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Width="300"
                Height="30"
                Margin="10,8,20,0"
                HorizontalAlignment="Right"
                Style="{DynamicResource TextBox.Normal}"
                Tag="Remise totale"
                Text="{Binding DiscountRate, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="20,8,0,0"
                FontSize="20"
                FontWeight="Bold"
                Foreground="Black"
                Text="Totale" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Width="300"
                Height="30"
                Margin="10,8,0,0"
                HorizontalAlignment="Right"
                FontSize="20"
                IsEnabled="False"
                Tag="Remise totale"
                Text="{Binding Total, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Margin="20,8,0,0"
                FontSize="22"
                FontWeight="Bold"
                Foreground="Green"
                Text="Totale Net" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                Width="300"
                Height="30"
                Margin="10,8,0,0"
                HorizontalAlignment="Right"
                FontSize="22"
                FontWeight="Bold"
                Foreground="Green"
                Tag="Remise totale"
                Text="{Binding TotalNet, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
        <!--  buttons  -->
        <StackPanel
            Grid.Row="5"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="120"
                Height="35"
                Margin="10"
                Command="{Binding SaveCommand}"
                Content="Valide"
                FlowDirection="RightToLeft"
                Style="{DynamicResource Icon.Green}"
                Tag="{StaticResource Save.Done}" />
            <Button
                Width="90"
                Height="35"
                Margin="10"
                Background="{StaticResource Material.red}"
                Command="{Binding CancelCommand}"
                Content="Cancel"
                Style="{DynamicResource Icon.Green}" />
        </StackPanel>
    </Grid>
</Window>
