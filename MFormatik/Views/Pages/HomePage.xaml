<Page
    x:Class="MFormatik.Views.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MFormatik.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="HomePage"
    d:DesignHeight="700"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <Border Background="WhiteSmoke" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Margin="20,20,20,0" VerticalAlignment="Top">
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Welcome to MFormatik!" />
                <TextBlock
                    FontSize="16"
                    Text="This is the home page as u see."
                    TextWrapping="WrapWithOverflow" />
            </StackPanel>
        </Grid>
    </Border>
</Page>
