<Page
    x:Class="MFormatik.Views.Pages.OrdersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:MFormatik.ViewModels.OrderVms"
    xmlns:Views="clr-namespace:MFormatik.Views.OrderViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MFormatik.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:MFormatik.ViewModels"
    Title="OrdersPage"
    d:DataContext="{d:DesignInstance Type=viewmodels:OrdersPageViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate DataType="{x:Type ViewModels:AddOrderVM}">
            <Views:AddOrderView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModels:OrdersListVM}">
            <Views:OrdersListView />
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <RadioButton
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,5,2,0"
            Command="{Binding NavigateToAddOrderCommand}"
            Content="Nouvelle Commande"
            GroupName="Navigation"
            IsChecked="{Binding IsAddOrderChecked}"
            Style="{StaticResource NavigationButtonStyle}"
            Tag="{StaticResource Plus}" />
        <RadioButton
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,5,0,0"
            Command="{Binding NavigateToOrdersListCommand}"
            Content="Liste des Commandes"
            GroupName="Navigation"
            Style="{StaticResource NavigationButtonStyle}"
            Tag="{StaticResource List}" />

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            CornerRadius="8">
            <ContentControl Content="{Binding CurrentViewModel}" />
        </Border>
    </Grid>
</Page>
